<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="shortcut icon" href="pabel.png" type="image/x-icon" />
  <title>Random Name Generator</title>
  <style>
    *{
      padding: 0;
      margin: 0;
      font-family: sans-serif;
    }
    .container{
      width: 60%;
      margin: auto;
      display: flex;
      flex-direction: column;
      padding: 5px;
      box-shadow: 0 0 10px black;
      padding: 20px;
      margin-top: 20px;
      border-radius: 10px;
    }
    h2{
      text-align: center;
    }
    input{
      border: 2px solid blue;
      padding: 10px;
      margin: 10px 0 10px;
      border-radius: 5px;
    }
    button{
      border: 0;
      background: blue;
      color: white;
      border-radius: 5px;
      padding: 10px 0;
      margin-top: 10px;
    }
    button:hover{
      background: black;
      color: white;
    }
    .link{
      margin-top: 20px;
      display: flex;
      flex-direction: column;
    }
    a{
      margin-top: 5px;
    }
  </style>
</head>
<body>
  
  <div class="container">
    <h2>Random Name Generator</h2>
    <input id="display" type="text" readonly />
    <button id="refesh" type="button">Random Name</button>
    
    <div class="link">
      <a href="/twofa">TOTP Generator</a>
      <a href="/facebook">Facebook UID Extractor</a>
    </div>
  </div>
  
  <script>
    const display = document.getElementById('display');
    const refesh = document.getElementById('refesh');

    const array = [
      "Pavel Islam", "Pavel Ahmed", "Pavel Khan", "Pavel Hassan", "Pavel Ali",
      "Rasel Islam", "Rasel Ahmed", "Rasel Khan", "Rasel Hassan", "Rasel Ali",
      "Shumon Islam", "Shumon Ahmed", "Shumon Khan", "Shumon Hassan", "Shumon Ali",
      "Mahin Islam", "Mahin Ahmed", "Mahin Khan", "Mahin Hassan", "Mahin Ali",
      "Rubel Islam", "Rubel Ahmed", "Rubel Khan", "Rubel Hassan", "Rubel Ali",
      "Sultan Islam", "Sultan Ahmed", "Sultan Khan", "Sultan Hassan", "Sultan Ali",
      "Shakib Islam", "Shakib Ahmed", "Shakib Khan", "Shakib Hassan", "Shakib Ali",
      "Milon Islam", "Milon Ahmed", "Milon Khan", "Milon Hassan", "Milon Ali",
      "Najmul Islam", "Najmul Ahmed", "Najmul Khan", "Najmul Hassan", "Najmul Ali",
      "Santo Islam", "Santo Ahmed", "Santo Khan", "Santo Hassan", "Santo Ali"
      // চাইলে পুরো লিস্ট এখানে বসাতে পারো
    ];

    function generateAndCopy() {
      const random = Math.floor(Math.random() * array.length);
      const name = array[random];
      display.value = name;

      // Copy to clipboard
      navigator.clipboard.writeText(name)
        .then(() => {
          alert(`Copied: ${name}`);
        });
    }

    // First load
    generateAndCopy();

    // On refresh button click
    refesh.addEventListener('click', generateAndCopy);
  </script>
</body>
</html>